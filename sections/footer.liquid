{% comment %}
  This is the footer section for the Shopify AI Theme Dev project
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="page-width">
    <div class="grid">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'menu' %}
              <div class="grid__item {{ block.settings.column_width }}" {{ block.shopify_attributes }}>
                {% if block.settings.title != blank %}
                  <h3 class="site-footer__title">{{ block.settings.title }}</h3>
                {% endif %}
                {% assign footer_linklist = block.settings.menu %}
                {% if linklists[footer_linklist].links.size > 0 %}
                  <ul class="site-footer__links">
                    {% for link in linklists[footer_linklist].links %}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% when 'text' %}
              <div class="grid__item {{ block.settings.column_width }}" {{ block.shopify_attributes }}>
                {% if block.settings.title != blank %}
                  <h3 class="site-footer__title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="site-footer__text">{{ block.settings.text }}</div>
                {% endif %}
              </div>
            {% when 'newsletter' %}
              <div class="grid__item {{ block.settings.column_width }}" {{ block.shopify_attributes }}>
                {% if block.settings.title != blank %}
                  <h3 class="site-footer__title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="site-footer__text">{{ block.settings.text }}</div>
                {% endif %}
                {% form 'customer', class: 'site-footer__newsletter-form' %}
                  {% if form.errors %}
                    <div class="form-error">{{ form.errors | default_errors }}</div>
                  {% elsif form.posted_successfully? %}
                    <div class="form-success">{{ 'general.newsletter_form.confirmation' | t }}</div>
                  {% endif %}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="input-group">
                    <input type="email" name="contact[email]" class="input-group__field newsletter__input" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}">
                    <div class="input-group__btn">
                      <button type="submit" class="btn newsletter__submit">
                        <span>{{ 'general.newsletter_form.submit' | t }}</span>
                      </button>
                    </div>
                  </div>
                {% endform %}
              </div>
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>

    <div class="site-footer__bottom">
      <div class="site-footer__copyright">
        Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </div>
      {% if section.settings.show_payment_icons %}
        <div class="site-footer__payment-icons">
          {% for type in shop.enabled_payment_types %}
            <span class="site-footer__payment-icon">
              {{ type | payment_type_svg_tag: class: 'icon icon--payment' }}
            </span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "All rights reserved."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        },
        {
          "type": "select",
          "id": "column_width",
          "label": "Column width",
          "options": [
            {
              "value": "one-quarter",
              "label": "25%"
            },
            {
              "value": "one-third",
              "label": "33%"
            },
            {
              "value": "one-half",
              "label": "50%"
            }
          ],
          "default": "one-quarter"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "About our store"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text area to tell your customers about your brand and vision. You can change it in the theme editor.</p>"
        },
        {
          "type": "select",
          "id": "column_width",
          "label": "Column width",
          "options": [
            {
              "value": "one-quarter",
              "label": "25%"
            },
            {
              "value": "one-third",
              "label": "33%"
            },
            {
              "value": "one-half",
              "label": "50%"
            }
          ],
          "default": "one-quarter"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Subscribe to our newsletter"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Promotions, new products and sales. Directly to your inbox.</p>"
        },
        {
          "type": "select",
          "id": "column_width",
          "label": "Column width",
          "options": [
            {
              "value": "one-quarter",
              "label": "25%"
            },
            {
              "value": "one-third",
              "label": "33%"
            },
            {
              "value": "one-half",
              "label": "50%"
            }
          ],
          "default": "one-half"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.site-footer {
  background-color: #f8f8f8;
  color: #333;
  padding: 50px 0 20px;
  margin-top: 60px;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
  margin-bottom: 40px;
}

@media screen and (max-width: 989px) {
  .grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 749px) {
  .grid {
    grid-template-columns: 1fr;
  }
}

.grid__item.one-quarter {
  grid-column: span 1;
}

.grid__item.one-third {
  grid-column: span 1;
}

.grid__item.one-half {
  grid-column: span 2;
}

@media screen and (max-width: 989px) {
  .grid__item.one-third,
  .grid__item.one-quarter {
    grid-column: span 1;
  }
}

@media screen and (max-width: 749px) {
  .grid__item.one-half {
    grid-column: span 1;
  }
}

.site-footer__title {
  font-size: 1.1rem;
  margin-bottom: 15px;
}

.site-footer__links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.site-footer__links li {
  margin-bottom: 8px;
}

.site-footer__links a {
  color: inherit;
  text-decoration: none;
}

.site-footer__links a:hover {
  text-decoration: underline;
}

.site-footer__text {
  margin-bottom: 20px;
}

.site-footer__newsletter-form .input-group {
  display: flex;
}

.site-footer__newsletter-form .input-group__field {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-right: none;
  border-radius: var(--inputs-radius) 0 0 var(--inputs-radius);
}

.site-footer__newsletter-form .input-group__btn {
  flex-shrink: 0;
}

.site-footer__newsletter-form .btn {
  padding: 10px 20px;
  border: none;
  background-color: var(--color-primary);
  color: white;
  border-radius: 0 var(--inputs-radius) var(--inputs-radius) 0;
  cursor: pointer;
}

.site-footer__bottom {
  padding-top: 20px;
  margin-top: 20px;
  border-top: 1px solid #e8e8e8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.site-footer__copyright {
  margin-bottom: 10px;
}

.site-footer__payment-icons {
  display: flex;
  flex-wrap: wrap;
}

.site-footer__payment-icon {
  margin: 0 5px 5px 0;
}

.icon.icon--payment {
  width: 38px;
  height: auto;
}
</style>
