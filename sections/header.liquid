{% comment %}
  This is the header section for the Shopify AI Theme Dev project
{% endcomment %}

<div class="header-wrapper">
  <header class="site-header" role="banner">
    <!-- Top red header bar -->
    <div class="site-header__top">
      <div class="page-width">
        <div class="site-header__top-inner">
          <!-- Logo -->
          <div class="site-header__logo-wrapper">
            {% if section.settings.logo %}
              <a href="/" class="site-header__logo-image">
                <img src="{{ section.settings.logo | img_url: '150x' }}" alt="{{ shop.name }}" width="70">
              </a>
            {% else %}
              <a href="/" class="site-header__logo-link">{{ shop.name }}</a>
            {% endif %}
          </div>

          <!-- Main Search Bar -->
          <div class="site-header__search-wrapper">
            <form action="/search" method="get" class="search-form">
              <div class="search-form__input-wrapper">
                <input 
                  type="search" 
                  name="q" 
                  placeholder="women t-shirts clearance sale" 
                  class="search-input"
                  aria-label="Search">
                <button type="submit" class="search-submit">
                  <svg aria-hidden="true" focusable="false" role="presentation" class="icon" viewBox="0 0 20 20">
                    <path d="M18.64 17.02l-5.31-5.31c.81-1.08 1.26-2.43 1.26-3.87C14.59 4.84 11.76 2 8.76 2S2.93 4.84 2.93 7.85s2.83 5.85 5.83 5.85c1.29 0 2.49-.36 3.5-.99l5.29 5.28c.26.31.62.48.99.48.37 0 .72-.17.99-.48.55-.54.55-1.44.11-1.97zM8.76 11.5c-2.01 0-3.65-1.64-3.65-3.65S6.75 4.2 8.76 4.2s3.65 1.64 3.65 3.65-1.64 3.65-3.65 3.65z"/>
                  </svg>
                </button>
              </div>
            </form>
          </div>

          <!-- Header Icons -->
          <div class="site-header__icons">
            <div class="site-header__icon-wrapper">
              <!-- Best Selling -->
              <a href="/collections/best-selling" class="site-header__icon-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2l2.2 6.27L20 9.46l-4.47 3.9.97 6.64L12 17.27 7.5 20l.97-6.64L4 9.46l5.8-1.19L12 2z"/>
                </svg>
                <span>Best-Selling Items</span>
              </a>
            </div>
            
            <!-- Account -->
            <div class="site-header__icon-wrapper">
              <a href="/account" class="site-header__icon-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Account</span>
              </a>
            </div>

            <!-- Support -->
            <div class="site-header__icon-wrapper">
              <a href="/pages/support" class="site-header__icon-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                  <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
                <span>Support</span>
              </a>
            </div>

            <!-- Cart -->
            <div class="site-header__icon-wrapper">
              <a href="/cart" class="site-header__icon-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
                <span>Cart ({{ cart.item_count }})</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Categories Navigation -->
    <div class="site-header__nav-wrapper">
      <div class="page-width">
        <nav class="site-header__nav" role="navigation">
          <div class="site-header__nav-categories">
            <button class="site-header__categories-button" aria-expanded="false" aria-controls="CategoriesDropdown">
              <span class="site-header__categories-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="3" y1="12" x2="21" y2="12"></line>
                  <line x1="3" y1="6" x2="21" y2="6"></line>
                  <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
              </span>
              <span>Categories</span>
            </button>
          </div>

          <ul class="site-nav">
            {% for link in linklists.main-menu.links %}
              <li class="site-nav__item">
                <a href="{{ link.url }}" class="site-nav__link">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </div>
  </header>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo max width",
      "default": 150
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_header",
      "label": "Enable sticky header",
      "default": true
    }
  ]
}
{% endschema %}

<style>
/* Header Styles */
:root {
  --header-bg-color: #E30923;
  --header-text-color: #FFFFFF;
  --header-nav-bg-color: #FFFFFF;
  --header-nav-text-color: #333333;
  --search-bg-color: #FFFFFF;
  --search-border-radius: 20px;
  --icon-size: 24px;
}

.page-width {
  padding-left: 15px;
  padding-right: 15px;
  max-width: 1200px;
  margin: 0 auto;
}

.header-wrapper {
  margin-bottom: 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* Top red header section */
.site-header__top {
  background-color: var(--header-bg-color);
  padding: 10px 0;
  color: var(--header-text-color);
}

.site-header__top-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* Logo styling */
.site-header__logo-wrapper {
  flex: 0 0 auto;
  margin-right: 15px;
}

.site-header__logo-image img {
  max-width: {{ section.settings.logo_max_width }}px;
  max-height: 40px;
}

.site-header__logo-link {
  color: var(--header-text-color);
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: bold;
}

/* Search bar styling */
.site-header__search-wrapper {
  flex: 1 1 auto;
  max-width: 500px;
  margin: 0 15px;
}

.search-form {
  width: 100%;
}

.search-form__input-wrapper {
  display: flex;
  position: relative;
  width: 100%;
  background-color: var(--search-bg-color);
  border-radius: var(--search-border-radius);
}

.search-input {
  flex: 1;
  padding: 10px 15px;
  border: none;
  border-radius: var(--search-border-radius) 0 0 var(--search-border-radius);
  font-size: 14px;
  width: 100%;
}

.search-submit {
  background-color: var(--search-bg-color);
  border: none;
  padding: 0 15px;
  border-radius: 0 var(--search-border-radius) var(--search-border-radius) 0;
  cursor: pointer;
}

.search-submit svg {
  width: 20px;
  height: 20px;
  color: #666;
}

/* Header icons styling */
.site-header__icons {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 0 0 auto;
}

.site-header__icon-wrapper {
  margin-left: 10px;
  padding: 0 5px;
  text-align: center;
}

.site-header__icon-link {
  color: var(--header-text-color);
  text-decoration: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
}

.site-header__icon-link svg {
  width: var(--icon-size);
  height: var(--icon-size);
  margin-bottom: 3px;
}

/* Navigation styling */
.site-header__nav-wrapper {
  background-color: var(--header-nav-bg-color);
  border-bottom: 1px solid #e8e8e8;
}

.site-header__nav {
  display: flex;
  align-items: center;
}

.site-header__categories-button {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background: none;
  border: none;
  cursor: pointer;
  font-weight: 500;
  color: var(--header-nav-text-color);
}

.site-header__categories-icon {
  margin-right: 5px;
}

.site-header__categories-icon svg {
  width: 20px;
  height: 20px;
}

.site-nav {
  display: flex;
  list-style: none;
  padding: 0;
  margin: 0;
  overflow-x: auto;
  white-space: nowrap;
}

.site-nav__item {
  margin: 0;
}

.site-nav__link {
  display: block;
  padding: 10px 15px;
  color: var(--header-nav-text-color);
  text-decoration: none;
  font-size: 0.9rem;
}

/* Responsive */
@media screen and (max-width: 989px) {
  .site-header__top-inner {
    flex-wrap: wrap;
  }
  
  .site-header__search-wrapper {
    order: 3;
    margin: 10px 0;
    max-width: 100%;
    width: 100%;
  }
  
  .site-header__icons {
    order: 2;
  }
  
  .site-header__icon-wrapper:not(.site-header__icon-wrapper:last-child) {
    display: none;
  }
}

@media screen and (max-width: 749px) {
  .site-header__top-inner {
    justify-content: space-between;
  }
  
  .site-header__icon-link span {
    font-size: 10px;
  }
  
  .site-header__categories-button span:not(.site-header__categories-icon) {
    display: none;
  }
  
  .site-header__nav {
    justify-content: space-between;
  }
}</style>
