      {
        "type": "text",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_youtube_url",
        "label": "YouTube URL"
      }
    ]
  }
