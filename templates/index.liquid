{% comment %}
  This is the homepage template for the Shopify AI Theme Dev project
{% endcomment %}

<div class="page-width">
  <div class="section-header text-center">
    <h1>{{ page_title | escape }}</h1>
  </div>

  {% if shop.products_count > 0 %}
    <div class="featured-collection">
      <h2 class="featured-collection__title">Featured Products</h2>
      <ul class="grid grid--uniform grid--view-items">
        {% for product in collections.frontpage.products limit: 8 %}
          <li class="grid__item small--one-half medium-up--one-quarter">
            <div class="product-card">
              <a href="{{ product.url | within: collection }}" class="product-card__link">
                <div class="product-card__image-wrapper">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '300x300', crop: 'center' }}" alt="{{ product.featured_image.alt | escape }}" class="product-card__image">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
                  {% endif %}
                </div>
                
                <div class="product-card__info">
                  <div class="product-card__name">{{ product.title }}</div>
                  <div class="product-card__price">{{ product.price | money }}</div>
                </div>
              </a>
            </div>
          </li>
        {% else %}
          <p>No products found in the featured collection.</p>
        {% endfor %}
      </ul>
    </div>
  {% else %}
    <div class="empty-page-content text-center">
      <h1>Welcome to your Shopify store!</h1>
      <p>You haven't added any products yet. <a href="{{ routes.admin_products_url }}">Add products</a> to get started.</p>
    </div>
  {% endif %}
</div>
